<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="350.0" prefWidth="350.0">
         <children>
            <Button id="loginBtn" fx:id="btnLogin" layoutX="152.0" layoutY="243.0" mnemonicParsing="false" onAction="#login" text="Login" />
            <Label layoutX="31.0" layoutY="27.0" text="Login">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label layoutX="36.0" layoutY="95.0" text="Username/E-Mail" />
            <Label layoutX="38.0" layoutY="167.0" text="Password" />
            <TextField fx:id="txtUsername" layoutX="36.0" layoutY="121.0" prefHeight="25.0" prefWidth="278.0" />
            <Button fx:id="forgotPwd" layoutX="120.0" layoutY="284.0" mnemonicParsing="false" onAction="#recovery" text="Forgot Password?" />
            <Button fx:id="btnRegister" layoutX="182.0" layoutY="34.0" mnemonicParsing="false" onAction="#register" text="Register Here">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <PasswordField layoutX="36.0" layoutY="190.0" prefHeight="25.0" prefWidth="278.0" />
         </children>
      </Pane>
   </children>
</GridPane>
